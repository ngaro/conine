### 1) vbox config ###
linux 4.x 64b, 2GB, geen floppy, default cdboot, utc tijd, geen remote display,
alpine-virt-3.8.1 64, adapter 1 = nat , mac 080027CF621D, adapter 2 = host-only, 08002755E125

### 2) installatie ### nodig: 1
inloggen als root zonder pass en de volgende keyboard input
setup-alpine #standaard installatie
us	#toetsenbord
us-dvorak
vmalpine #hostname
eth0 #netwerk config
192.168.15.2/24
192.168.15.1
no ##manueele config
garofil.be ##dns
8.8.8.8
#wachtwoord, standaard thuispass
Europe	#tijdzone
Brussels
none	#proxy
2	#mirror
none	#sshserver
none	#ntpserver
sda	#schijf
sys	#schijfgebruik
y
halt #setup is klaar, afsluiten

### 3) docker installatie ### nodig: 2
vi /etc/apk/repositories
#de community lijn uncommenten
apk update
apk add docker
rc-update add docker boot	#docker starten bij het booten
halt

### 4) onnodige services uitzetten: nodig 2
in /etc/inittab de lijnen beginnend met tty[2-6] commenten en de lijnen met ttyS0 commenten (bij de laatst is dit nog niet gebeurd) #alle terminals uitzetten behalve de 1ste
for a in /etc/init.d /etc/runlevels/* ; do for b in acpid crond klogd syslog ; do rm $a/$b ; done ; done #acpid, crond, syslog en klogd niet meer laten opstarten

### 4.1) login niet meer opstarten ### nodig: 1 en "apk update"
een main.c maken met 1 van de volgende inhouden
//BEGIN met docker
#include <stdlib.h> //EXIT_FAILURE
#include <unistd.h> //execl

int main(int argc, char** argv) {
	execl("/usr/bin/docker", "/usr/bin/docker", "run", "--rm", "-ti", "--name", "conthoofd", "-v", "/var/run/docker.sock:/var/run/docker.sock", "ubuntu", (char*) NULL);
	return EXIT_FAILURE;
}

//BEGIN met ash
#include <stdlib.h> //EXIT_FAILURE
#include <stdio.h>  //printf
#include <unistd.h> //execl

int main(int argc, char** argv) {
	for(int i=0; i < argc; i++) {
		printf("|%s|\n", argv[i]);
	}
	execl("/bin/ash", "/bin/ash", (char*) NULL);
	return EXIT_FAILURE;
}

//BEGIN met enkel ash
#include <stdlib.h> //EXIT_FAILURE
#include <unistd.h> //execl

int main(int argc, char** argv) {
	execl("/bin/ash", "/bin/ash", (char*) NULL);
	return EXIT_FAILURE;
}
//EINDE

apk add gcc musl-dev && gcc main.c -Wall -Werror -Os -o /bin/login
# nu wordt opgestart:
#1 /sbin/init
