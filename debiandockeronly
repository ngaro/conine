### 2de netwerkkaart configureren ### nodig: 1
sudo -i  
cat >> /etc/network/interfaces
allow-hotplug enp0s8
iface enp0s8 inet static
	address 192.168.56.2/24

### vbox verbeteren ### nodig: 1
#guest additions cd laden
sudo -i
apt install gcc make linux-headers-4.9.0-8-all-amd64
mkdir /mnt/cd && mount /dev/cdrom /mnt/cd && cd /mnt/cd && ./VBoxLinuxAdditions.run && cd && umount /mnt/cd && rmdir /mnt/cd && eject
apt purge libmpc3:amd64 libmpx2:amd64 linux-libc-dev:amd64 libmpfr4:amd64 libc6-dev:amd64 cpp-6:amd64 binutils:amd64 cpp:amd64 libitm1:amd64 gcc:amd64 linux-headers-4.9.0-8-all-amd64:amd64 libcilkrts5:amd64 libasan3:amd64 libquadmath0:amd64 linux-compiler-gcc-6-x86:amd64 linux-headers-4.9.0-8-rt-amd64:amd64 libisl15:amd64 libtsan0:amd64 libgcc-6-dev:amd64 libubsan0:amd64 linux-headers-4.9.0-8-common-rt:amd64 make:amd64 gcc-6:amd64 linux-headers-4.9.0-8-amd64:amd64 linux-kbuild-4.9:amd64 liblsan0:amd64 linux-headers-4.9.0-8-common:amd64 libgomp1:amd64 manpages-dev:amd64 libc-dev-bin:amd64 libatomic1:amd64 libcc1-0:amd64


### docker installatie ### nodig: 1
sudo -i
apt install apt-transport-https
wget https://download.docker.com/linux/debian/gpg 
apt-key add gpg
echo "deb [arch=amd64] https://download.docker.com/linux/debian $(lsb_release -cs) stable" | tee -a /etc/apt/sources.list.d/docker.list
apt update
apt install docker-compose docker-ce
perl -p -i -e 'if(/^docker/) { s/$/garo/; } ' /etc/group
rm gpg
apt purge apt-transport-https
